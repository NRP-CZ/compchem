
{%- extends "oarepo_ui/detail.html" %}

{%- block page_body %}
<div class="ui main container cover-page" style="min-height: calc(100vh - 22em); width: 100vw">
  <div class="ui relaxed grid" style="width: 100%">
    <div id="frontpage-search-bar"
         class="ui container fluid center aligned borderless" style="background: transparent">
    <div class="ui container grid rel-mt-2">
    <div class="sixteen wide column center aligned">
            <div class="row rel-mt-5">
                <div class="sixteen wide mobile four wide computer column">
                    <h1 class="ui header" style="padding-bottom: 10vh;">
                        Repository of Computational Chemistry Data
                    </h1>
                </div>
                <div class="sixteen wide mobile eight wide computer column center aligned">
                    <form action="/experiments" class="ui form" role="search">
                        <div class="ui fluid big action input">
                            <input type="text" name="q" class="form-control"
                                   placeholder="{{ _('Search') }}">
                            <button type="submit" class="ui icon search button"
                                    aria-label="{{ _('Search') }}"><i class="search icon"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="ui divider hidden"></div>
    </div>
    </div>
    </div>
  </div>
</div>
{%- endblock page_body %}

{% block javascript %}
    {{ super() }}
    <script>
    console.log("hide")
        $(document).ready(function () {
            $(".search-bar").hide();
            $(".main-nav-links").hide();
        });
    </script>
{% endblock %}