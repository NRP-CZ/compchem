{# def d, level=0 #}
{% set md=d.metadata %}

<ITable>
  <ITableField d={md.description} />
  <ITableField d={md.name} />
  <ITableField d={md.publisher} />
  {% for item in array(md.creators) %}
      <ExperimentsCreator d={item} level={level+1}/>
  {% endfor %}
  <ExperimentsFundingReference d={md.fundingReference} level={level+1}/>
  {% for item in array(md.objectIdentifiers) %}
      <ExperimentsNrObjectPid d={item} level={level+1}/>
  {% endfor %}
  {% for item in array(md.simulations) %}
      <ExperimentsSimulation d={item} level={level+1}/>
  {% endfor %}
</ITable>