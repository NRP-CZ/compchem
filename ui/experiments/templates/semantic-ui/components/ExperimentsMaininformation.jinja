{# def d, level=0 #}
<ITableSection level={level} title={d._ui_label} >
  <ITableField d={d.AWHAdaptiveBiasing} level={level} />
  <ITableField d={d.boxSizeAndShape} level={level} />
  <ITableField d={d.forceField} level={level} />
  <ITableField d={d.freeEnergyCalculation} level={level} />
  <ITableField d={d.referencePressure} level={level} >
    <ITableArrayValue value={d.referencePressure} />
  </ITableField>
  <ITableField d={d.referenceTemperature} level={level} >
    <ITableArrayValue value={d.referenceTemperature} />
  </ITableField>
  <ITableField d={d.simulationLength} level={level} />
  <ITableField d={d.simulationTimeStep} level={level} />
  <ITableField d={d.simulationType} level={level} />
  <ITableField d={d.statisticalEnsemble} level={level} />
  <ITableField d={d.umbrellaSampling} level={level} />
  {% for it in array(d.molecules) %}
    <ExperimentsMolecule d={it} level={level+1} />
  {% endfor %}
</ITableSection>